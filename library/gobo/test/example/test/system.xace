<?xml version="1.0"?>

<system name="xtest">
	<description>
		system: "Gobo Eiffel Test Examples Tester"
		copyright: "Copyright (c) 2001-2008, Eric Bezault and others"
		license: "MIT License"
		date: "$Date: 2008-07-26 10:10:48 +0200 (Sat, 26 Jul 2008) $"
		revision: "$Revision: 6456 $"
	</description>

	<root class="XTEST" creation="make"/>
	<option name="console_application" value="true"/>
	<option unless="${DEBUG}">
		<option name="assertion" value="none"/>
		<option name="garbage_collector" value="none"/>
		<option name="finalize" value="true"/>
	</option>
	<option if="${DEBUG}">
		<option name="assertion" value="all"/>
		<option name="garbage_collector" value="internal"/>
		<option name="finalize" value="false"/>
	</option>
	<option if="${GOBO_DOTNET}">
		<option name="msil_generation" value="true"/>
		<option name="line_generation" value="true"/>
	</option>

	<cluster name="test_tester" location="${GOBO}/test/example" prefix="example_">
		<option name="abstract" value="true"/>
		<cluster name="test"/>
		<cluster name="common"/>
	</cluster>
	<cluster name="test_common" location="${GOBO}/test/common"/>
	<cluster name="example_test_testgen" location="TESTGEN"/>
	<mount location="${GOBO}/library/test/library.xace"/>
	<mount location="${GOBO}/library/kernel/library.xace"/>
	<mount location="${GOBO}/library/structure/library.xace"/>
	<mount location="${GOBO}/library/utility/library.xace"/>
	<mount location="${GOBO}/library/pattern/library.xace"/>
	<mount location="${GOBO}/library/kernel.xace"/>
</system>
